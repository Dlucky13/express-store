<h1> Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field col s6">
        <input name="title" id="name" type="text" class="validate" required>
        <label for="name">Course Name</label>
        <span class="helper-text" data-error="enter Course name"></span>
    </div>

    <div class="input-field col s6">
        <input name="price" id="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>

    <div class="input-field col s6">
        <input name="image" id="image" type="text" class="validate" required>
        <label for="image">Img URL</label>
        <span class="helper-text" data-error="enter img Url"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>